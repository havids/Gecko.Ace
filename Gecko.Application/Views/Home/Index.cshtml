    <!-- inline scripts related to this page -->
    <script type="text/javascript">
        $(function () {

            $("#content-wrapper").find('.mainContent').height($(window).height() - 130);
            $(window).resize(function (e) {
                $("#content-wrapper").find('.mainContent').height($(window).height() - 130);
            });
            //menu 绑定
            $.get("/home/menuinfo", { x: Math.random() }, function (data) {
                //请求 menu数据
                var menuTemplate = $.templates("#menuInfoTmpl");

                app = {
                    data: data
                };

                var htmlstr = menuTemplate.render(app);
                $("#nav-list").html(htmlstr);
                //左侧菜单初始化
                $.acetab.init();
            })
            //修改密码
            $("#cpwd").bind("click", function () {
                layer.open({
                    title: '修改密码',
                    type: 2,
                    maxmin: false,
                    area: ['530px', '430px'],
                    fixed: false, //不固定
                    maxmin: false,
                    content: "/SystemSecurity/StaffMgr/ChangePassword"
                });
            })

        })
