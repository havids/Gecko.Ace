@model Gecko.Security.DTO.DepartmentDTO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>部门管理</title>
    <script src="~/Content/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Content/Scripts/jquery.validate.min.js"></script>
    <script src="~/Content/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/Content/Scripts/layer/layer.js"></script>
    <script type="text/javascript">

        function departmentsuccess(data) {
            if (data == "1") {
                
                parent.departmentwinclose();
            }
            else { alert(data); }
        }

    </script>
    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="/content/assets/css/bootstrap.min.css" />
</head>
<body>

    <p>@*@Html.ValidationSummary()*@</p>
        @using (Ajax.BeginForm("DepartMentInfo", "DepartMentMgr", null, new AjaxOptions { HttpMethod = "post", OnSuccess = "departmentsuccess(data);" }, new { @class = "form-horizontal", style = "overflow:hidden;" }))
        {
            <input name="Id" type="hidden" value="@Model.Id">
            @Html.HiddenFor(model => model.ParentDepartmentId)
            <div class="form-group">
                <label class="col-sm-3 col-xs-3 control-label text-right" for="form-field-1"> 名称: </label>
                <div class="col-sm-9 col-xs-6">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
                <label class="col-sm-1 col-xs-1 control-label" style="color:red;">*</label>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-3 control-label text-right" for="form-field-1"> 排序ID: </label>
                <div class="col-sm-9 col-xs-6">
                    @Html.TextBoxFor(model => model.OrderId, new { @class = "form-control" })
                </div>
                <label class="col-sm-1 col-xs-1 control-label" style="color:red;">*</label>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-3 control-label text-right" for="form-field-1"> 电话号码: </label>
                <div class="col-sm-9 col-xs-6">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-3 control-label text-right" for="form-field-1"> 分机号码: </label>
                <div class="col-sm-9 col-xs-6">
                    @Html.TextBoxFor(model => model.ExtNumber, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-3 control-label text-right" for="form-field-1"> 传真号码: </label>
                <div class="col-sm-9 col-xs-6">
                    @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-3 control-label text-right" for="form-field-1"> 备注: </label>
                <div class="col-sm-9 col-xs-6">
                    @Html.TextBoxFor(model => model.Remark, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-10">
                    <button type="submit" class="btn btn-primary">确定</button>
                </div>
            </div>

        }
</body>
</html>